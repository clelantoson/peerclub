<div class="container">
						<div class="row">
							<div class="col-md-12">
								
								<div class="contenu-tabs-ilh participants-ilh">
									
									<div class="list-participants-ilh">

                  <% @group_subs.each do |sub| %>
										<!-- item list participant -->
										<div class="item-participant">
											<div>
												<div class="infos-participant-ilh">
													<div>
														<div class="ph-participant">
															<%= image_tag sub.user.avatar, class:"img-fluid" %>
														</div>
													</div>
													<div class="name-ilh">
														<%= sub.user.first_name %> <%= sub.user.last_name %>
													</div>
												</div>
											</div>
											<div>
												<%= sub.user.job %>
											</div>
											<div>
												<% if sub.user != current_user %><%= mail_to sub.user.email, "Contacter", class:"btn btn-lg float-right" %><%else%><%end%>
											</div>
										</div>
										<!-- end item -->
                  <%end%>
									</div>
								</div>
							</div>
						</div>
					</div>