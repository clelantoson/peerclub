
<div class="container">

  <h1><%= @user.first_name %> <%= @user.last_name %></h1>
 
  <p> 
    <ul>
      <li> Description : <%=@user.description %></li>
      <li> Birthday : <%= @user.date_of_birth %></li>
      <li> Email : <%= @user.email %></li>
      <li>Job : <%= @user.job %></li>
    </ul>
  </p>

    <%= image_tag @user.avatar, style:"max-width:100px" if @user.avatar.attached? %>

  <h3>Changer d'avatar ?</h3>
<%= form_tag avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar, onchange:"myFunction()" %>
  <%= submit_tag "mettre Ã  jour", disabled:true, id: 'submit_avatar' %>
<% end %>
<p id="text"></p>

</div>

<script>
function myFunction(){
  var x = document.getElementById("avatar");
  var s = document.getElementById("submit_avatar")
  var txt = "";
  if ('files' in x) {
    if (x.files.length == 0) {
      txt = "Select one or more files.";
      s.setAttribute('disabled','true');
    } else {
      s.removeAttribute('disabled');
    }
  } 
  document.getElementById("text").innerHTML = txt;
}
</script>


